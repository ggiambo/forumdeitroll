<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
  <!-- Configure the database connection here -->
  <jdbc>
    <driver>com.mysql.jdbc.Driver</driver>
    <url>jdbc:mysql://localhost:3306/fdtsucker</url>
    <user>root</user>
    <password></password>
  </jdbc>

  <generator>
    <database>
      <name>org.jooq.util.mysql.MySQLDatabase</name>
      <includes>.*</includes>
      <excludes>blogger_.*</excludes>
      <inputSchema>fdtsucker</inputSchema>
    </database>

    <generate>
    	<fluentSetters>true</fluentSetters>
    </generate>

    <target>
      <packageName>com.forumdeitroll.persistence.jooq</packageName>
      <directory>src/</directory>
    </target>
  </generator>
</configuration>
