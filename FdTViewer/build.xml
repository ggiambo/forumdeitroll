<?xml version="1.0" encoding="UTF-8"?>
<project name="FdTViewer" default="war">
	<path id="compile.classpath">
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="*.jar"/>
		</fileset>
		<!--
		sul server
		<fileset dir="/usr/share/java">
			<include name="servlet-api-2.5.jar"/>
			<include name="jsp-api-2.1.jar"/>
		</fileset>
		-->
		<fileset dir="/home/milky/fdt/webdev/apache-tomcat-7.0.29/lib">
			<include name="servlet-api.jar"/>
			<include name="jsp-api.jar"/>
		</fileset>
	</path>
	<target name="clean">
		<delete dir="WebContent/WEB-INF/classes"/>
		<delete file="FdTViewer.war"/>
	</target>
	<target name="init" depends="clean">
		
		<mkdir dir="WebContent/WEB-INF/classes"/>
	</target>
	<target name="compile" depends="init">
		<javac destdir="WebContent/WEB-INF/classes" debug="true" srcdir="src" includeantruntime="false">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	<target name="war" depends="compile">
		<war destfile="FdTViewer.war" webxml="WebContent/WEB-INF/web.xml">
			<fileset dir="WebContent"/>
		</war>
	</target>
</project>
